@import "../../components/wxSearch/wxSearch.wxss";

page {
  background: #f6f6f6;
  color: #007aff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo {
  height: 200rpx;
  width: 60%;
  margin: 0 auto;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: #fff;
}

.userinfo-nick{
  width: 100rpx;
  height: 50rpx;
  text-align: center;
}

.uploader {
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.uploader-text {
  width: 100%;
  line-height: 34px;
  font-size: 34rpx;
  text-align: center;
  background:  #fff;
}

.uploader-container {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
}

.uploader-image {
  width: 100rpx;
  height: 100rpx;
}
